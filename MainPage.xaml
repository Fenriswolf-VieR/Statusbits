                        <Setter Property="MaxHeight" Value="31"></Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <ListView Height="258"
                Width="282"
                Margin="564,-258,0,0"
                Name="ActiveBits3"
