                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <ListView x:ConnectionId='6' Height="258"
                Width="282"
                Margin="564,-774,0,0"
                Name="ActiveBits4"
                HorizontalAlignment="Left"
                SelectionMode="Multiple"
                                                                
                                                                               
                ItemsSource="{Binding Model.StatusBits4}">
