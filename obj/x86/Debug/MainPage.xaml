            </ListView>

            <ListView x:ConnectionId='5' Height="258"
                Width="282"
                Margin="282,-258,0,0"
                Name="ActiveBits5"
                HorizontalAlignment="Left"
                SelectionMode="Multiple"
                                                                
                                                                               
                ItemsSource="{Binding Model.StatusBits5}">
