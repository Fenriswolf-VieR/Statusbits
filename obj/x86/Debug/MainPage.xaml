                        <Setter Property="MaxHeight" Value="31"></Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <ListView x:ConnectionId='7' Height="258"
                Width="282"
                Margin="564,-258,0,0"
                Name="ActiveBits3"
                HorizontalAlignment="Left"
                SelectionMode="Multiple"
                                                                
                                                                               
                ItemsSource="{Binding Model.StatusBits3}">
                <ListView.ItemsPanel>
